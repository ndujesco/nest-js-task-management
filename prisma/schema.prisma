// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id                    Int     @id @default(autoincrement())
  status                TaskStatus
  title                 String
  description           String
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  DONE
}

model User {
  id                    Int     @id @default(autoincrement())
  name              String
  password          String
}